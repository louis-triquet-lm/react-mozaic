{
    "name": "react-mozaic",
    "version": "0.1.0",
    "private": true,
    "dependencies": {
        "@mozaic-ds/css-dev-tools": "^1.0.1-alpha.32",
        "@mozaic-ds/icons": "^1.0.1-alpha.32",
        "@mozaic-ds/styles": "^1.0.1-alpha.31",
        "@mozaic-ds/tokens": "^1.0.1-alpha.28",
        "@mozaic-ds/web-fonts": "^1.0.1-alpha.25",
        "@testing-library/jest-dom": "^4.2.4",
        "@testing-library/react": "^9.3.2",
        "@testing-library/user-event": "^7.1.2",
        "classnames": "^2.2.6",
        "prop-types": "^15.7.2",
        "react": "^16.12.0",
        "react-dom": "^16.12.0",
        "react-scripts": "3.3.0"
    },
    "scripts": {
        "storybook": "start-storybook",
        "css:lint-fix": "npx stylelint src/*.scss --fix",
        "statics:copy": "rm -rf public/fonts && mkdir public/fonts && cp node_modules/@mozaic-ds/web-fonts/*.woff public/fonts && cp node_modules/@mozaic-ds/web-fonts/*.woff2 public/fonts",
        "build:css": "postcss src/styles/main.scss -o src/styles/dist/index.css",
        "watch:css": "postcss src/styles/main.scss -o src/styles/dist/index.css -w",
        "start": "npm-run-all -p statics:copy watch:css start-js",
        "start-js": "react-scripts start",
        "build-js": "react-scripts build",
        "build": "MOZAIC_ENV=production npm-run-all build:css build-js",
        "test": "react-scripts test",
        "eject": "react-scripts eject"
    },
    "eslintConfig": {
        "extends": "react-app"
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "devDependencies": {
        "@storybook/react": "^5.2.8",
        "autoprefixer": "^9.7.3",
        "npm-run-all": "^4.1.5",
        "postcss-cli": "^6.1.3",
        "postcss-nested": "^4.2.1"
    }
}